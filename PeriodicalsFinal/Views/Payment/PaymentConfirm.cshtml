
@{
    ViewBag.Title = "PaymentConfirm";
}

<h2>Payment Confirm</h2>

@using (Html.BeginForm("PaymentWithPaypal", "Payment", FormMethod.Get))
{
    <p>Replenishment amount. Min: 1$</p>
    <input type="number" value="1" name="paymentPrice" class="form-control mb-3" min="1" step="0.01"/>

    <input type="submit" class="btn btn-custom" value="Process"/>
}